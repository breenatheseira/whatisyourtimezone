<div class="col-xs-12 col-md-6">

    <div class="jumbotron">
        <h1>Login</h1>
      
        <%= form_for(:session) do |f| %>

        <div class="form-group">    
            <%= f.label "Email: " %>
            <%= f.text_field :email, class: 'form-control' %>
        </div> 
        
        <div class="form-group">    
            <%= f.label "Password: " %>
            <%= f.text_field :password, class: 'form-control' %>
        </div>         
    
        <%= f.submit 'Log In', class:'btn btn-info' %>
        
        <% end %>
    </div>
</div>